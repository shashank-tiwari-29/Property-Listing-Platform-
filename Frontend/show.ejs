<% layout("layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Listing Details:</h3>
    </div>
    <div class="card col-6 offset-2 show-card">
        <img src="<%=listings.image.url%>" class="card-img-top show-img" alt="listing-img">
        <div class="card-body">
            <p class="card-text">
                <b><%= listings.title%></b><br>
                <%= listings.description%><br>
                &#8377;<%= listings.price.toLocaleString("en-IN")%><br>
                <%= listings.location%><br>
                <%=listings.country%><br>
            </p>
        </div>
    </div>

  
    <br>
  
    
</div>
  <div class="btns">
         <a href="/listings/<%=listings._id%>/edit" class="btn btn-dark col-1 offset-2">Edit</a>
    
    
    
    
        <form method="post" action="/listings/<%=listings._id%>?_method=DELETE">
        <button class="btn btn-dark offset-4">Delete</button>
    </div>
    
        <br>
        <br>
    </form>
</body>
